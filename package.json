{
  "name": "vanilla-nodejs-blog",
  "version": "1.0.0",
  "description": "Anonymous Confessions is a blog built with vanilla nodejs (No frameworks!)",
  "main": "server.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node",
    "watch": "cross-env NODE_ENV=development nodemon server.js --ignore public/",
    "assets": "parcel watch ./public/js/index.js ./public/sass/main.scss ./public/sass/admin/admin.scss",
    "build": "parcel build ./public/js/index.js ./public/sass/main.scss ./public/sass/admin/admin.scss",
    "dev": "concurrently \"npm run watch\" \"npm run assets\" --names \"ðŸ’»,ðŸ“¦\" --prefix name",
    "fillDemo": "cross-env NODE_ENV=development node setup/fillConfessions.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "targets": {
    "main": false,
    "default": {
      "distDir": "public/dist"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SrikarKSV/vanilla-nodejs-blog.git"
  },
  "keywords": [
    "blog",
    "vanilla",
    "nodejs",
    "confessions",
    "anonymous"
  ],
  "author": "Srikar KSV",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SrikarKSV/vanilla-nodejs-blog/issues"
  },
  "homepage": "https://github.com/SrikarKSV/vanilla-nodejs-blog#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.0.0",
    "concurrently": "^6.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-node": "^4.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "nodemon": "^2.0.13",
    "parcel": "^2.0.0",
    "prettier": "^2.5.1"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "co-body": "^6.1.0",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^4.6.0",
    "cookie": "^0.4.1",
    "date-fns": "^2.25.0",
    "dotenv": "^10.0.0",
    "jsonwebtoken": "^8.5.1",
    "express-session": "^1.17.2",
    "mongoose": "^6.0.8",
    "on-finished": "^2.3.0",
    "pug": "^3.0.2",
    "serve-static": "^1.14.1",
    "slugify": "^1.6.1"
  },
  "browserslist": [
    "> 1%",
    "not dead",
    "last 2 versions"
  ]
}
