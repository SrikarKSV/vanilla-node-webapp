doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(rel="stylesheet", href="/css/main.css")
  title #{user.username} | Anonymous Confessions
body
  h1 Profile 
  h2 Username: #{user.username}
  p Role: #[mark= user.role]

  h3 Posts marked 
  ul 
    each post in user.postsMarked
      li: a(href=`/confessions/${post.slug}`)= post.title 
  
  h3 Posts edited 
  ul 
    each post in user.postsEdited
      li: a(href=`/confessions/${post.slug}`)= post.title 
