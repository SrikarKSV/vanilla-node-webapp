mixin form(url, title, confession, color)
  .confession-form 
    form(action=url method="POST")
      label(for="title") Title #[span.accent.small (Maximum 100 characters)]
      input#title(type="text", name="title" maxlength="100" value=title required)
      label(for="color") Choose profile color
      button.btn.btn-purple.btn-generate(type="button") Generate color
      .confession-form__color-picker
        - const defaultColor = color ? color : "#ffc600";
        - const iconBackgroundColor = h.isDark(defaultColor) ? "#000" : "#fff"
        input#color(type="color" name="color" value=defaultColor)
        div.icon(style=`background: ${defaultColor}`).profile__icon
          svg(height='24' version='1.1' width='24' xmlns='http://www.w3.org/2000/svg' xmlns:cc='http://creativecommons.org/ns#' xmlns:dc='http://purl.org/dc/elements/1.1/' xmlns:rdf='http://www.w3.org/1999/02/22-rdf-syntax-ns#')
            g(transform='translate(0 -1028.4)')
              path(d='m8.4062 1041.1c-2.8856 1.3-4.9781 4-5.3437 7.3 0 1.1 0.8329 2 1.9375 2h14c1.105 0 1.938-0.9 1.938-2-0.366-3.3-2.459-6-5.344-7.3-0.649 1.3-2.011 2.3-3.594 2.3s-2.9453-1-3.5938-2.3z' fill=iconBackgroundColor)
              path(d='m17 4a5 5 0 1 1 -10 0 5 5 0 1 1 10 0z' fill=iconBackgroundColor transform='translate(0 1031.4)')
              path(d='m12 11c-1.277 0-2.4943 0.269-3.5938 0.75-2.8856 1.262-4.9781 3.997-5.3437 7.25 0 1.105 0.8329 2 1.9375 2h14c1.105 0 1.938-0.895 1.938-2-0.366-3.253-2.459-5.988-5.344-7.25-1.1-0.481-2.317-0.75-3.594-0.75z' fill=iconBackgroundColor transform='translate(0 1028.4)')
      label(for="confession") Confession
      textarea#confession(name="confession" required)= confession
      button.btn.btn-red.btn-submit(type="submit" maxlength="14000") Submit
