        header.hero__header
          h1: a(href="/") AConfessions 
          nav 
            ul 
              li: a(href="/confessions").accent Read confessions
              li: a(href="/new").btn.btn-red Write confession
              if user
                li: a(href="/admin").btn.btn-yellow Admin

        
        if flashes 
          - const categories = Object.keys(flashes)
          each category in categories
            each message in flashes[category]
              .flash(class=`flash--${category}`)
                p= message
                button.flash__remove(onClick="this.parentElement.remove()") &times;
        
        section.hero__text
          h2 #[span.hero__red Confess] about anything from your daily life, #[span.hero__yellow Anonymously]
